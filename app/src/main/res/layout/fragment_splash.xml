<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.splash.SplashFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D0F6D2"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/splash_imageLogo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo_driver_app" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_below="@id/splash_imageLogo"
            android:textColor="#606060"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/splash_btLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/green"
                android:background="@drawable/bg"
                android:textStyle="bold"
                android:text="Đăng nhập"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/splash_btRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray"
                android:background="@drawable/bg1"
                android:textStyle="bold"
                android:text="Đăng ký"
                android:textColor="#606060"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>