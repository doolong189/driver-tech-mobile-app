<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_order_imgUser"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="@dimen/_5dp"
            >
            <TextView
                android:id="@+id/item_order_tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/store"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/item_order_tvUserAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textStyle="bold"
                android:textColor="#6E7C78"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/item_order_tvPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/status_receiver"
            android:backgroundTint="#218a47"
            android:background="@drawable/bg1"
            android:padding="@dimen/_5dp"
            android:layout_margin="@dimen/_5dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_10sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_order_tvListProductDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_product"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/item_order_tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textStyle="bold"
        android:textColor="#6E7C78"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/item_order_btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:backgroundTint="#6E7C78"
            android:background="@drawable/bg1"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="13sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/item_order_btnAccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/accept"
            android:backgroundTint="#218a47"
            android:background="@drawable/bg1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="13sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/green"/>
</LinearLayout>